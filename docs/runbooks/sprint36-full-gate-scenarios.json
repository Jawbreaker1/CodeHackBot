{
  "version": "sprint36_full_gate_v1",
  "scenarios": [
    {
      "id": "host_discovery_inventory",
      "name": "Host discovery and service inventory",
      "goal": "Discover live hosts and summarize exposed services in the authorized lab scope.",
      "scope": {
        "targets": [
          "127.0.0.1"
        ],
        "networks": [
          "127.0.0.0/8"
        ]
      },
      "constraints": [
        "internal_lab_only",
        "authorized_testing",
        "readonly_preferred"
      ],
      "success_criteria": [
        "inventory_generated"
      ],
      "stop_criteria": [
        "no_new_evidence_after_2_replans",
        "max_runtime=15m"
      ],
      "planner": "auto",
      "permission_mode": "default",
      "max_parallelism": 1,
      "max_attempts": 2
    },
    {
